@model IEnumerable<MyAppMVC.Models.Team>

@{
    ViewBag.Title = "TeamsEdit";
}

<h2>TeamsEdit</h2>

<p>
    @Html.ActionLink("Create New", "CreateRow")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TeamName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TeamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditRow", new { id = item.Id }) |
                @Html.ActionLink("Details", "DetailsRow", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeleteRow", new { id = item.Id })
            </td>
        </tr>
    }

</table>
